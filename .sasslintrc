{
  "files": {
    "include": "src/scss/**/*.s+(a|c)ss"
  },
  "options": {
    "formatter": "stylish",
    "merge-default-rules": false
  },
  "rules": {
    "attribute-quotes": 1,
    "bem-depth": [
      1,
      {
        "max-depth": 3
      },
    ],
    "border-zero": [
      1,
      {
        "convention": "zero"
      }
    ],
    "brace-style": 1,
    "class-name-format": [
      1,
      {
        "convention": "^(?!js-).*",
        "convention-explanation": "Selectors starting with js-* are reserved for javascript hooks."
      }
    ],
    "clean-import-paths": [
      1,
      {
        "leading-underscore": true
      }
    ],
    "declarations-before-nesting": 1,
    "empty-args": 1,
    "empty-line-between-blocks": 1,
    "final-newline": 1,
    "function-name-format": 1,
    "hex-length": 1,
    "hex-notation": 1,
    "indentation": 1,
    "leading-zero": 1,
    "mixin-name-format": 1,
    "mixins-before-declarations": 1,
    "nesting-depth": [
      1,
      {
        "max-depth": 5
      }
    ],
    "no-duplicate-properties": 1,
    "no-ids": 1,
    "no-invalid-hex": 1,
    "no-extends": 1,
    "no-mergeable-selectors": 1,
    "no-misspelled-properties": 1,
    "no-qualifying-elements": 1,
    "no-trailing-whitespace": 1,
    "no-trailing-zero": 1,
    "no-universal-selectors": 1,
    "one-declaration-per-line": 1,
    "placeholder-name-format": [
      1,
      {
        "convention": "hyphenatedbem"
      }
    ],
    "property-sort-order": [
      1,
      {
        "order": "smaccs"
      }
    ],
    "pseudo-element": 1,
    "quotes": 1,
    "shorthand-values": 1,
    "single-line-per-selector": 1,
    "space-after-bang": 1,
    "space-after-colon": 1,
    "space-after-comma": 1,
    "space-around-operator": 1,
    "space-before-bang": 1,
    "space-before-brace": 1,
    "space-before-colon": 1,
    "space-between-parens": 1,
    "trailing-semicolon": 1,
    "url-quotes": 1,
    "variable-name-format": 1,
    "zero-unit": 1
  }
}
